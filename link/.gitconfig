[user]
	name = Neil Grogan
	email = neil@ngrogan.com
[alias]
        reviewmaster = push origin HEAD:refs/for/master
	co = checkout
	last = log -1 HEAD
	change-commits = "!f() { VAR=$1; OLD=$2; NEW=$3; shift 3; git filter-branch --env-filter \"if [[ $`echo $VAR` = \\\"$OLD\\\" ]]; then export $VAR=\\\"$NEW\\\"; fi\" $@; }; f "
[push]
	default = simple
[pull]
	rebase = true
[color]
	ui = auto
[grep]
	patternType = perl
